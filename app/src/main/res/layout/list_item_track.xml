<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/artist_result"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/cardview_dark_background"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView android:id="@+id/iv_item_thumb"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:src="@drawable/question"
        android:scaleType="fitCenter"
        android:padding="5dp"/>

    <TextView android:id="@+id/tv_track_name"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:text="@string/artist_name"
        android:layout_toEndOf="@id/iv_item_thumb"
        android:textSize="22sp"
        android:maxLines="1"
        android:gravity="top"
        android:layout_marginTop="10dp"
        android:layout_marginStart="70dp" />

    <TextView android:id="@+id/tv_track_album"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:text="@string/artist_name"
        android:layout_toEndOf="@id/iv_item_thumb"
        android:textColor="#ff6f6f6f"
        android:textSize="18sp"
        android:maxLines="1"
        android:gravity="bottom"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="5dp"/>
</android.support.v7.widget.CardView>